<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/one"
        android:text="1"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/two"
        android:text="2"
        android:layout_x="75dp"
        android:layout_y="0dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/three"
        android:text="3"
        android:layout_x="150dp"
        android:layout_y="0dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/add"
        android:text="+"
        android:layout_x="225dp"
        android:layout_y="0dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/four"
        android:text="4"
        android:layout_x="0dp"
        android:layout_y="75dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/five"
        android:text="5"
        android:layout_x="75dp"
        android:layout_y="75dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/six"
        android:text="6"
        android:layout_x="150dp"
        android:layout_y="75dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/minus"
        android:text="-"
        android:layout_x="225dp"
        android:layout_y="75dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/seven"
        android:text="7"
        android:layout_x="0dp"
        android:layout_y="150dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/eight"
        android:text="8"
        android:layout_x="75dp"
        android:layout_y="150dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/nine"
        android:text="9"
        android:layout_x="150dp"
        android:layout_y="150dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>
    <Button
        android:id="@+id/mul"
        android:text="*"
        android:layout_x="225dp"
        android:layout_y="150dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/point"
        android:text="."
        android:layout_x="0dp"
        android:layout_y="225dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/zero"
        android:text="0"
        android:layout_x="75dp"
        android:layout_y="225dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/equal"
        android:text="="
        android:layout_x="150dp"
        android:layout_y="225dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <Button
        android:id="@+id/divide"
        android:text="/"
        android:layout_x="225dp"
        android:layout_y="225dp"
        android:layout_height="75dp"
        android:layout_width="75dp"></Button>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="5dp"
        android:layout_y="307dp" ></TextView>


</AbsoluteLayout>